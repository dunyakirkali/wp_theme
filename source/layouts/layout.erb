<!doctype html>

<% if build? %>
  <html class="no-js" <?php language_attributes(); ?>>
<% else %>
  <html class="no-js" lang="en">
<% end %>
  
	<head>
		<% if build? %>
		  <title><?php echo get_bloginfo('name'); ?></title>
		<% end %>
	  <meta charset="utf-8" />
	  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
	  <link href='//fonts.googleapis.com/css?family=Merriweather' rel='stylesheet' type='text/css'>
	  <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  	
		<% if development? %>
			<%= stylesheet_link_tag "style" %>
			<%= javascript_include_tag "modernizr" %>
		<% else %>
		  <link href='<?php bloginfo('stylesheet_url'); ?>' rel='stylesheet' type='text/css'>
		  <script src="<?php bloginfo('stylesheet_directory'); ?>/javascripts/modernizr.js"></script>
		<% end %>
		
		<% if build? %>
			<?php wp_head(); ?>
		<% end %>
  </head>
  
	<% if build? %>
		<body <?php body_class(); ?>>
	<% else %>
		<body>
	<% end %>
	
    <%= yield %>

		<% if development? %>
			<%= javascript_include_tag  "all" %>
		<% else %>
		  <script src="<?php bloginfo('stylesheet_directory'); ?>/javascripts/all.js"></script>
		<% end %>

		<% if build? %>
			<?php wp_footer(); ?>
			
			<p id='wp-tags'><?php the_tags(); ?></p>
			<p id='wp-link-pages'><?php wp_link_pages( $args ); ?></p>
			<p id='wp-comments'><?php comments_template(); ?></p>
			<p id='wp-pagelinks'><?php paginate_links(); ?></p>
		<% end %>
		
  </body>
</html>
